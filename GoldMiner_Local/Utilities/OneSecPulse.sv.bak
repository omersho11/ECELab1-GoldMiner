module OneSecPulse (	
    input logic clk,
    input logic resetN,
);

local [26:0] ticksSinceReset = 26'b0;

always_ff @(posedge clk or negedge resetN) begin
	if (!resetN) begin  
		currentLevel <= 0;
		lastLevelEnded <= 0;
		levelDR <= 0;
		RGBout <= 8'h00;
	end 
   else if(enable) begin
      // Combinational-like defaults within the FF
      levelDR <= 0;
      RGBout <= 8'hFF;
		
      for(int j = 0; j < OBJECTS_COUNT; j = j + 1) begin
          if(drBus[j]) begin
              levelDR <= 1;
              RGBout <= RGBBus[j*8 +: 8]; // Corrected indexing syntax
          end
      end
		
		if (hookDR) begin
			levelDR <= 1;
			RGBout <= hookRGB;
		end
		  
		  
		  
//		timer <= timer - 1;
//		if (timer <= 0) stageEnded = 1;
		  
		  
    end	
end

endmodule